<section id="details-page">

    <div class="main_card">
        <div class="card_left">
            <div class="card_datails">

                <h1>Title: {{post.title}}</h1>
                <h3>Created by an author: {{post.authorName}}</h3>
                <div class="card_animal">
                    <p class="card-keyword">Keyword: {{post.keyword}}</p>
                    <p class="card-location">Location: {{post.location}}</p>
                    <p class="card-date">Date: {{post.date}}</p>
                </div>

                <p class="disc">Description: {{post.description}}</p>

                {{#if user}}
                <div class="social-btn">
                    {{#if post.isOwner}}
                    <a href="/post/edit/{{post._id}}" class="edit-btn">Edit</a>
                    <a href="/post/delete/{{post._id}}" class="del-btn">Delete</a>

                    {{else}}
                    {{#if post.hasVoted}}
                    <p class="thanks-for-vote">Thanks For Voting</p>
                    {{else}}
                    <a href="/post/like/{{post._id}}" class="vote-up">UpVote +1</a>
                    <a href="/post/dislike/{{post._id}}" class="vote-down">DownVote -1</a>
                    {{/if}}
                    {{/if}}

                </div>

                {{/if}}
            </div>
        </div>
        <div class="card_right">
            <img src="{{post.imageUrl}}" alt="image">
        </div>
    </div>

</section>

<section id="votes">
    <div class="vote-info">
        <div class="card_left">
            <div class="card_datails">
                <h1>Votes</h1>
                <div class="card_vote">
                    <p class="PV">Total rating of votes: {{post.rating}}</p>
                </div>

                {{#if post.voters}}
                    <p class="disc">People who voted for the post - {{post.voters}}</p>

                {{else}}
                <p class="disc">People who voted for the post - No one has voted yet.</p>
                {{/if}}
            </div>
        </div>
    </div>
</section>